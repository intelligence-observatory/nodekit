enum AudioFormat : ubyte {
    U8 = 1,
    I16,
    I32,
    I64,
    F32,
    F64,
    None
}

table AudioFrame {
    buffer:[ubyte] (required);
    format:AudioFormat=1;
    rate:uint32;
    channels:uint16;
}

table VisualFrame {
    buffer:[ubyte] (required);
    width:uint32;
    height:uint32;
}

table Response {
    visual:VisualFrame;
    audio:AudioFrame;
    sensor:string;
    finished:bool;
    version:string;
}

root_type Response;
file_identifier "repl";